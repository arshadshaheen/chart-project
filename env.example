# =============================================================================
# TradingView Chart Project - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual API keys
# NEVER commit the .env file to version control!

# =============================================================================
# PROVIDER CONFIGURATION
# =============================================================================
# Active provider: 'mt5' or 'cryptocompare'
PROVIDER=mt5

# =============================================================================
# API KEYS (Keep these secure!)
# =============================================================================
# MT5 Bearer Token (for MT5 provider)
MT5_API_KEY=Bearer your_mt5_bearer_token_here

# CryptoCompare API Key (for CryptoCompare provider)
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here

# =============================================================================
# PROVIDER-SPECIFIC SETTINGS
# =============================================================================
# MT5 Configuration
MT5_BASE_URL=http://localhost:3000
MT5_WS_URL=wss://live-mt5-sockets-staging.naqdi.com
MT5_DEFAULT_SYMBOL=EURUSD.s
MT5_DEFAULT_INTERVAL=1
MT5_FAKE_DATA=0

# CryptoCompare Configuration
CRYPTOCOMPARE_BASE_URL=https://min-api.cryptocompare.com/
CRYPTOCOMPARE_WS_URL=wss://streamer.cryptocompare.com/v2
CRYPTOCOMPARE_DEFAULT_SYMBOL=Bitfinex:BTC/USDT
CRYPTOCOMPARE_DEFAULT_INTERVAL=1D

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
DEBUG_MODE=true
